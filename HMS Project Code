<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Hotel Management System</title>
</head>
<body>
    <h1>Hotel Management System</h1>
    <h2>Rooms</h2>
    <form id="addRoomForm">
        <input type="text" id="roomNumber" placeholder="Room Number" required>
        <input type="text" id="roomType" placeholder="Room Type" required>
        <input type="number" id="roomPrice" placeholder="Price" required>
        <button type="submit">Add Room</button>
    </form>
    <div id="roomsList"></div>

    <script>
        document.getElementById('addRoomForm').addEventListener('submit', async (event) => {
            event.preventDefault();
            const roomData = {
                room_number: document.getElementById('roomNumber').value,
                type: document.getElementById('roomType').value,
                price: parseFloat(document.getElementById('roomPrice').value),
                availability: true
            };
            const response = await fetch('/rooms', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(roomData)
            });
            const result = await response.json();
            alert(result.message);
        });
    </script>
</body>
</html>
