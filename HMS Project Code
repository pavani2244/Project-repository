from flask import Flask, request, jsonify
import sqlite3

app = Flask(__name__)

# Database initialization
def init_db():
    with sqlite3.connect('hotel.db') as conn:
        cursor = conn.cursor()
        cursor.execute('''
        CREATE TABLE IF NOT EXISTS rooms (
            id INTEGER PRIMARY KEY,
            room_number TEXT UNIQUE,
            type TEXT,
            price REAL,
            availability BOOLEAN
        )''')
        conn.commit()

@app.route('/rooms', methods=['POST'])
def create_room():
    data = request.json
    with sqlite3.connect('hotel.db') as conn:
        cursor = conn.cursor()
        cursor.execute("INSERT INTO rooms (room_number, type, price, availability) VALUES (?, ?, ?, ?)",
                       (data['room_number'], data['type'], data['price'], data['availability'])
        conn.commit()
    return jsonify({"message": "Room added successfully!"}) 201

@app.route('/rooms', methods=['GET'])
def get_rooms():
    with sqlite3.connect('hotel.db') as conn:
        cursor = conn.cursor()
        cursor.execute("SELECT * FROM rooms")
        rooms = cursor.fetchall()
    return jsonify(rooms), 200

# Additional endpoints for update and delete...

if __name__ == "__main__":
    init_db()
    app.run(debug=True)
